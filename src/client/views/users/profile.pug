extends ../layouts/base.pug
include ../mixins/video.pug

block body
  if user.avatarUrl
    img(src=`${user.avatarUrl.includes("http") ? "" : "/"}${user.avatarUrl}` width="100" height="100")
  h2=user.username
  h3=user.name
  h3=user.location
  ul
    each v in user.videos
      +video(v)
    else
      small no videos

